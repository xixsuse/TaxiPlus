<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:paddingTop="@dimen/_3sdp"
    android:foreground="?attr/selectableItemBackground"
    android:background="?attr/orderBackground"
    android:id="@+id/rcti_view">
    <ImageView
        android:id="@+id/rct_image"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_25sdp"
        android:layout_marginStart="@dimen/_20sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/line"
        android:layout_marginBottom="@dimen/_4sdp"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_4sdp"
        app:layout_constraintStart_toEndOf="@id/rct_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/line"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:id="@+id/rct_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="?attr/usText"
            android:textSize="@dimen/_13ssp"
            android:textAlignment="textEnd"
            android:maxLines="1"
            android:ellipsize="end"/>
        <TextView
            android:id="@+id/rct_carname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/gray"
            android:textSize="@dimen/_11ssp"
            android:textAlignment="textEnd"
            android:maxLines="1"
            android:ellipsize="end"/>
    </LinearLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray"
        app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>