<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/colorPrimary"
    android:paddingBottom="@dimen/_4sdp">
    <LinearLayout
        android:id="@+id/rioi_info_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:background="?attr/orderBackground"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/_3sdp"
        android:paddingStart="@dimen/_25sdp"
        android:paddingBottom="@dimen/_4sdp">
        <TextView
            android:id="@+id/rioi_user_info_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4sdp"
            android:textSize="@dimen/_11ssp"
            android:textColor="@color/gray" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_3sdp"
            android:orientation="vertical"
            android:gravity="center">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <TextView
                    android:id="@+id/rioi_address_from_text"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_13ssp"
                    android:textColor="?attr/usText"
                    android:textStyle="bold"
                    android:text="from"/>
                <TextView
                    android:id="@+id/rioi_price_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:textSize="@dimen/_11ssp"
                    android:text="600 th"
                    android:textStyle="bold"
                    android:textColor="?attr/textColor"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_marginBottom="@dimen/_4sdp"
                android:gravity="center">
                <TextView
                    android:id="@+id/rioi_address_to_text"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_12ssp"
                    android:text="toto"
                    android:textColor="?attr/usText" />
                <TextView
                    android:id="@+id/rioi_date_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:textSize="@dimen/_11ssp"
                    android:text="120"
                    android:textColor="?attr/textColor"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/_4sdp"
                android:gravity="center">
                <TextView
                    android:id="@+id/rioi_car_text"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:textSize="@dimen/_11ssp"
                    android:text="model"
                    android:textColor="?attr/usText" />
                <TextView
                    android:id="@+id/rioi_seat_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:textSize="@dimen/_11ssp"
                    android:text="Кол. мест: 0"
                    android:textColor="?attr/textColor"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/gray"/>

</android.support.constraint.ConstraintLayout>