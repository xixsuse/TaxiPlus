<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="@dimen/_8sdp"
    app:behavior_hideable="false"
    app:behavior_peekHeight="@dimen/_58sdp"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
    android:id="@+id/bottom_sheet"
    android:clickable="true"
    android:visibility="gone">

    <ImageView
        android:id="@+id/swipe_view"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_13sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/icon_swipe"/>
    <TextView
        android:id="@+id/confirm_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/swipe_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textAlignment="center"
        android:layout_marginTop="@dimen/_5sdp"
        android:textSize="@dimen/_16ssp"
        android:textColor="?attr/colorPrimary"
        android:text="@string/info_order"
        android:drawablePadding="@dimen/_10sdp"
        android:drawableEnd="@drawable/icon_current_order"/>

    <ImageView
        android:id="@+id/from_icon"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_17sdp"
        app:layout_constraintTop_toTopOf="@id/from"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/from"
        android:background="@drawable/icon_point_a"/>
    <TextView
        android:id="@+id/from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="?attr/colorPrimary"
        android:layout_marginTop="@dimen/_13sdp"
        android:layout_marginStart="@dimen/_5sdp"
        android:text="@string/from"
        app:layout_constraintTop_toBottomOf="@id/confirm_text"
        app:layout_constraintStart_toEndOf="@id/from_icon"
        android:textSize="@dimen/_13ssp"/>
    <TextView
        android:id="@+id/mf_confirm_from_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/from"
        app:layout_constraintTop_toTopOf="@id/from"
        app:layout_constraintBottom_toBottomOf="@id/from"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingStart="@dimen/_3sdp"
        android:textColor="?attr/colorPrimary"
        android:text="@string/from"
        android:textAlignment="textEnd"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="@dimen/_13ssp"/>

    <ImageView
        android:id="@+id/to_icon"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_17sdp"
        app:layout_constraintTop_toTopOf="@id/to"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/to"
        android:background="@drawable/icon_point_b"/>
    <TextView
        android:id="@+id/to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="?attr/colorPrimary"
        android:layout_marginTop="@dimen/_13sdp"
        android:layout_marginStart="@dimen/_5sdp"
        android:text="@string/to"
        app:layout_constraintTop_toBottomOf="@id/from"
        app:layout_constraintStart_toEndOf="@id/to_icon"
        android:textSize="@dimen/_13ssp"/>
    <TextView
        android:id="@+id/mf_confirm_to_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="?attr/colorPrimary"
        android:text="@string/to"
        android:textAlignment="textEnd"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintStart_toEndOf="@id/to"
        app:layout_constraintTop_toTopOf="@id/to"
        app:layout_constraintBottom_toBottomOf="@id/to"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="@dimen/_13ssp"/>

    <ImageView
        android:id="@+id/name_icon"
        android:layout_width="@dimen/_17sdp"
        android:layout_height="@dimen/_17sdp"
        android:layout_marginStart="@dimen/_4sdp"
        app:layout_constraintTop_toTopOf="@id/confirm_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/confirm_name"
        android:background="@drawable/icon_profile"/>
    <TextView
        android:id="@+id/confirm_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="?attr/colorPrimary"
        android:layout_marginTop="@dimen/_13sdp"
        android:layout_marginStart="@dimen/_5sdp"
        android:text="@string/offer_name"
        app:layout_constraintTop_toBottomOf="@id/to"
        app:layout_constraintStart_toEndOf="@id/to_icon"
        android:textSize="@dimen/_13ssp"/>
    <TextView
        android:id="@+id/mf_confirm_name_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="?attr/colorPrimary"
        android:text="@string/offer_name"
        android:textAlignment="textEnd"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintStart_toEndOf="@id/confirm_name"
        app:layout_constraintTop_toTopOf="@id/confirm_name"
        app:layout_constraintBottom_toBottomOf="@id/confirm_name"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="@dimen/_13ssp"/>

    <ImageView
        android:id="@+id/phone_icon"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_17sdp"
        android:layout_marginStart="@dimen/_3sdp"
        app:layout_constraintTop_toTopOf="@id/phone_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/phone_name"
        android:background="@drawable/icon_phone"/>
    <TextView
        android:id="@+id/phone_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="?attr/colorPrimary"
        android:layout_marginTop="@dimen/_13sdp"
        android:layout_marginStart="@dimen/_5sdp"
        android:text="@string/offer_phone"
        app:layout_constraintTop_toBottomOf="@id/confirm_name"
        app:layout_constraintStart_toEndOf="@id/to_icon"
        android:textSize="@dimen/_13ssp"/>
    <TextView
        android:id="@+id/mf_confirm_phone_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="?attr/colorPrimary"
        android:text="@string/offer_phone"
        android:textAlignment="textEnd"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintStart_toEndOf="@id/phone_name"
        app:layout_constraintTop_toTopOf="@id/phone_name"
        app:layout_constraintBottom_toBottomOf="@id/phone_name"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="@dimen/_13ssp"/>

    <ImageView
        android:id="@+id/model_icon"
        android:layout_width="@dimen/_22sdp"
        android:layout_height="@dimen/_12sdp"
        app:layout_constraintTop_toTopOf="@id/model_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/model_name"
        android:background="@drawable/icon_car"/>
    <TextView
        android:id="@+id/model_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="?attr/colorPrimary"
        android:layout_marginTop="@dimen/_13sdp"
        android:layout_marginStart="@dimen/_5sdp"
        android:text="@string/car_model"
        app:layout_constraintTop_toBottomOf="@id/phone_name"
        app:layout_constraintStart_toEndOf="@id/to_icon"
        android:textSize="@dimen/_13ssp"/>
    <TextView
        android:id="@+id/mf_confirm_model_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="?attr/colorPrimary"
        android:text="@string/offer_car_model"
        android:textAlignment="textEnd"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintStart_toEndOf="@id/model_name"
        app:layout_constraintTop_toTopOf="@id/model_name"
        app:layout_constraintBottom_toBottomOf="@id/model_name"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="@dimen/_13ssp"/>

    <ImageView
        android:id="@+id/number_icon"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_12sdp"
        app:layout_constraintTop_toTopOf="@id/number_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/number_name"
        android:background="@drawable/icon_card"/>
    <TextView
        android:id="@+id/number_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="?attr/colorPrimary"
        android:layout_marginTop="@dimen/_13sdp"
        android:layout_marginStart="@dimen/_5sdp"
        android:text="@string/offer_car_number"
        app:layout_constraintTop_toBottomOf="@id/model_name"
        app:layout_constraintStart_toEndOf="@id/to_icon"
        android:textSize="@dimen/_13ssp"/>
    <TextView
        android:id="@+id/mf_confirm_number_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="?attr/colorPrimary"
        android:text="@string/offer_car_number"
        android:textAlignment="textEnd"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintStart_toEndOf="@id/number_name"
        app:layout_constraintTop_toTopOf="@id/number_name"
        app:layout_constraintBottom_toBottomOf="@id/number_name"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="@dimen/_13ssp"/>

    <ImageView
        android:id="@+id/date_icon"
        android:layout_width="@dimen/_17sdp"
        android:layout_height="@dimen/_17sdp"
        android:layout_marginStart="@dimen/_4sdp"
        app:layout_constraintTop_toTopOf="@id/date_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/date_name"
        android:background="@drawable/icon_clock"/>
    <TextView
        android:id="@+id/date_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="?attr/colorPrimary"
        android:layout_marginTop="@dimen/_13ssp"
        android:layout_marginStart="@dimen/_5sdp"
        android:text="@string/offer_date"
        app:layout_constraintTop_toBottomOf="@id/number_name"
        app:layout_constraintStart_toEndOf="@id/to_icon"
        android:textSize="@dimen/_13ssp"/>
    <TextView
        android:id="@+id/mf_confirm_date_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="?attr/colorPrimary"
        android:text="@string/date"
        android:textAlignment="textEnd"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintStart_toEndOf="@id/date_name"
        app:layout_constraintTop_toTopOf="@id/date_name"
        app:layout_constraintBottom_toBottomOf="@id/date_name"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="@dimen/_13ssp"/>

    <ImageView
        android:id="@+id/mode_icon"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_17sdp"
        app:layout_constraintTop_toTopOf="@id/mode_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/mode_name"
        android:background="@drawable/icon_mode"/>
    <TextView
        android:id="@+id/mode_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="?attr/colorPrimary"
        android:layout_marginTop="@dimen/_13sdp"
        android:layout_marginStart="@dimen/_5sdp"
        android:text="@string/offer_mode"
        app:layout_constraintTop_toBottomOf="@id/date_name"
        app:layout_constraintStart_toEndOf="@id/to_icon"
        android:textSize="@dimen/_13ssp"/>
    <TextView
        android:id="@+id/mf_confirm_mode_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="?attr/colorPrimary"
        android:text="@string/date"
        android:textAlignment="textEnd"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintStart_toEndOf="@id/mode_name"
        app:layout_constraintTop_toTopOf="@id/mode_name"
        app:layout_constraintBottom_toBottomOf="@id/mode_name"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="@dimen/_13ssp"/>

    <ImageButton
        android:id="@+id/mf_confirm_call_button"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:padding="@dimen/_7sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mf_confirm_mode_text"
        android:background="@drawable/circle_green_view"
        android:foreground="?android:attr/selectableItemBackground"
        android:src="@drawable/icon_call"
        android:scaleType="centerCrop"/>
    <ImageButton
        android:id="@+id/mf_confirm_chat_button"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:padding="@dimen/_9sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mf_confirm_mode_text"
        android:background="@drawable/circle_green_view"
        android:foreground="?android:attr/selectableItemBackground"
        android:src="@drawable/icon_message"
        android:scaleType="centerCrop"/>

</android.support.constraint.ConstraintLayout>