<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:background="@color/white">

    <android.support.v7.widget.Toolbar
        android:id="@+id/fdp_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_42sdp"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:contentInsetRight="0dp"
        app:contentInsetEnd="0dp"
        android:background="?attr/colorPrimary">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:requiresFadingEdge="horizontal"
            android:gravity="center_vertical">
            <ImageButton
                android:id="@+id/fdp_menu_view"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:background="@drawable/icon_menu_white" />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_30sdp"
                android:text="@string/driver_register"
                android:textAlignment="center"
                android:textSize="@dimen/_16ssp"
                android:textColor="@color/white"/>
        </LinearLayout>
    </android.support.v7.widget.Toolbar>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/fdp_toolbar"
        app:layout_constraintBottom_toBottomOf="parent">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/_15sdp"
            app:layout_constraintBottom_toBottomOf="parent">
            <ImageView
                android:id="@+id/fdp_logo"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_100sdp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_margin="@dimen/_15sdp"
                app:layout_constraintEnd_toEndOf="parent"/>

            <EditText
                android:id="@+id/fdp_name_edittext"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                app:layout_constraintTop_toBottomOf="@id/fdp_logo"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:background="@drawable/border_for_view"
                android:hint="@string/auth_name"
                android:textColor="@color/gray"
                android:textColorHint="@color/gray"
                android:inputType="textCapWords"
                android:textSize="@dimen/_14ssp"
                android:padding="@dimen/_5sdp"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"/>

            <EditText
                android:id="@+id/fdp_phone_edittext"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                app:layout_constraintTop_toBottomOf="@id/fdp_name_edittext"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:background="@drawable/border_for_view"
                android:hint="@string/enter_phone"
                android:textColor="@color/gray"
                android:textColorHint="@color/gray"
                android:inputType="phone"
                android:maxLength="17"
                android:textSize="@dimen/_14ssp"
                android:padding="@dimen/_5sdp"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"/>

            <EditText
                android:id="@+id/fdp_email_edittext"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                app:layout_constraintTop_toBottomOf="@id/fdp_phone_edittext"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:background="@drawable/border_for_view"
                android:hint="@string/enter_email"
                android:textColor="@color/gray"
                android:textColorHint="@color/gray"
                android:textSize="@dimen/_14ssp"
                android:inputType="textEmailAddress"
                android:padding="@dimen/_5sdp" />

            <LinearLayout
                android:id="@+id/fdp_car_model_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_marginStart="@dimen/_20sdp"
                app:layout_constraintTop_toBottomOf="@id/fdp_email_edittext"
                android:background="@drawable/border_for_view"
                android:orientation="horizontal"
                android:gravity="center">
                <TextView
                    android:id="@+id/fdp_car_model_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/gray"
                    android:text="@string/car_model"
                    android:textSize="@dimen/_14ssp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_5sdp"/>
                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:background="@drawable/icon_bottom_arrow"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/fdp_car_submodel_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_marginStart="@dimen/_20sdp"
                app:layout_constraintTop_toBottomOf="@id/fdp_car_model_view"
                android:background="@drawable/border_for_view"
                android:orientation="horizontal"
                android:gravity="center">
                <TextView
                    android:id="@+id/fdp_car_submodel_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/gray"
                    android:text="@string/car_type"
                    android:textSize="@dimen/_14ssp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_5sdp"/>
                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:background="@drawable/icon_bottom_arrow"/>
            </LinearLayout>
            <EditText
                android:id="@+id/fdp_gos_number_edittext"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                app:layout_constraintTop_toBottomOf="@id/fdp_car_submodel_view"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:background="@drawable/border_for_view"
                android:hint="@string/enter_gos_number"
                android:textSize="@dimen/_14ssp"
                android:inputType="textCapCharacters"
                android:textColor="@color/gray"
                android:textColorHint="@color/gray"
                android:padding="@dimen/_5sdp" />

            <EditText
                android:id="@+id/fdp_year_edittext"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                app:layout_constraintTop_toBottomOf="@id/fdp_gos_number_edittext"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:background="@drawable/border_for_view"
                android:hint="@string/produced_year"
                android:textSize="@dimen/_14ssp"
                android:inputType="number"
                android:maxLength="4"
                android:digits="0123456789"
                android:textColor="@color/gray"
                android:textColorHint="@color/gray"
                android:padding="@dimen/_5sdp" />
            <TextView
                android:id="@+id/additional"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/fdp_year_edittext"
                android:textColor="@color/gray"
                android:textSize="@dimen/_14ssp"
                android:text="@string/additional"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_18sdp"/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/fdp_facilities_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                app:layout_constraintTop_toBottomOf="@id/additional"
                android:layout_marginTop="@dimen/_10sdp"/>

            <Button
                android:id="@+id/fdp_select_taxipark"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                app:layout_constraintTop_toBottomOf="@id/fdp_facilities_recyclerview"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:background="@drawable/rounded_white_view"
                android:textColor="@color/gray"
                android:textSize="@dimen/_15ssp"
                android:textAllCaps="false"
                android:text="@string/select_taxipark"/>
            <Button
                android:id="@+id/fdp_register_button"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                app:layout_constraintTop_toBottomOf="@id/fdp_select_taxipark"
                android:layout_margin="@dimen/_20sdp"
                android:background="@drawable/rounded_green_view"
                android:textColor="@color/white"
                android:textSize="@dimen/_15ssp"
                android:textAllCaps="false"
                android:text="@string/register"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.v4.widget.NestedScrollView>
    <ProgressBar
        android:id="@+id/fdp_progressbar"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:indeterminate="true"
        android:visibility="gone"/>
</android.support.constraint.ConstraintLayout>