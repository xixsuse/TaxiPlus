<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/orderBackground"
    android:clickable="true"
    tools:context=".ui.makeOrder.IntercityMakeOrderFragment">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_42sdp"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:contentInsetRight="0dp"
        app:contentInsetEnd="0dp"
        android:background="?attr/colorPrimary">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:requiresFadingEdge="horizontal"
            android:gravity="center_vertical">
            <ImageButton
                android:id="@+id/fs_back"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:background="@drawable/icon_back"
                android:foreground="?android:attr/selectableItemBackground"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/new_order"
                android:textAlignment="center"
                android:layout_marginEnd="@dimen/_30sdp"
                android:textSize="@dimen/_13ssp"
                android:textColor="@color/white"/>
        </LinearLayout>
    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:id="@+id/top_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        android:padding="@dimen/_8sdp"
        android:background="?attr/colorPrimary"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@color/white">
            <ImageView
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_22sdp"
                android:background="@drawable/icon_point_a"
                app:layout_constraintTop_toTopOf="parent"
                android:scaleType="fitXY"/>
            <TextView
                android:id="@+id/fimo_from_edittext"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_27sdp"
                android:background="@color/trans"
                android:hint="@string/from"
                android:textColorHint="?attr/colorPrimary"
                android:gravity="center"
                android:textColor="?attr/colorPrimary"
                android:textSize="@dimen/_13ssp"
                android:textAllCaps="false"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_7sdp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@color/white">
            <ImageView
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_22sdp"
                android:background="@drawable/icon_point_b"
                app:layout_constraintTop_toTopOf="parent"
                android:scaleType="fitXY"/>
            <TextView
                android:id="@+id/fimo_to_edittext"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_27sdp"
                android:background="@color/trans"
                android:hint="@string/to"
                android:textColorHint="?attr/colorPrimary"
                android:gravity="center"
                android:textColor="?attr/colorPrimary"
                android:textSize="@dimen/_13ssp"
                android:textAllCaps="false"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/info_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:background="?attr/orderBackground"
        app:layout_constraintTop_toBottomOf="@id/top_view"
        app:layout_constraintBottom_toBottomOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/fiko_seats_icon"
                android:layout_width="@dimen/_17sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_7sdp"
                android:layout_marginStart="@dimen/_9sdp"
                android:layout_marginBottom="@dimen/_7sdp"
                android:tint="?attr/tabColor"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:background="@drawable/icon_seat" />
            <EditText
                android:id="@+id/fiko_seats_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/trans"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginEnd="@dimen/_4sdp"
                android:hint="@string/seat_numbers"
                android:textColorHint="@color/light_gray"
                android:inputType="number"
                android:textColor="?attr/usText"
                android:textSize="@dimen/_12ssp"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/fiko_price_icon"
                android:layout_width="@dimen/_17sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_7sdp"
                android:layout_marginStart="@dimen/_9sdp"
                android:layout_marginBottom="@dimen/_7sdp"
                android:tint="?attr/tabColor"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:background="@drawable/icon_by_bonuses" />
            <EditText
                android:id="@+id/fiko_price_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/trans"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginEnd="@dimen/_4sdp"
                android:hint="@string/price_per_one"
                android:textColorHint="@color/light_gray"
                android:inputType="number"
                android:textColor="?attr/usText"
                android:textSize="@dimen/_12ssp"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/fiko_date_icon"
                android:layout_width="@dimen/_17sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_7sdp"
                android:layout_marginStart="@dimen/_9sdp"
                android:layout_marginBottom="@dimen/_7sdp"
                android:tint="?attr/tabColor"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:background="@drawable/icon_calendar"
                android:backgroundTint="@color/gray"/>
            <TextView
                android:id="@+id/fiko_date_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/trans"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginEnd="@dimen/_4sdp"
                android:hint="@string/date"
                android:textColorHint="@color/light_gray"
                android:textColor="?attr/usText"
                android:textSize="@dimen/_12ssp"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/fiko_comment_icon"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_7sdp"
                android:layout_marginStart="@dimen/_9sdp"
                android:layout_marginBottom="@dimen/_7sdp"
                android:tint="?attr/tabColor"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:background="@drawable/icon_dialog" />
            <EditText
                android:id="@+id/fiko_comment_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/trans"
                android:layout_marginStart="@dimen/_9sdp"
                android:layout_marginEnd="@dimen/_4sdp"
                android:hint="@string/set_comment"
                android:textColorHint="@color/light_gray"
                android:textColor="?attr/usText"
                android:textSize="@dimen/_12ssp"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/fiko_make_order_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:background="@drawable/rounded_green_view"
            android:textSize="@dimen/_14ssp"
            android:textColor="@color/white"
            android:text="@string/make_order"/>
    </LinearLayout>
    <ProgressBar
        android:id="@+id/fi_progressbar"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:indeterminate="true"
        android:visibility="gone"/>
</android.support.constraint.ConstraintLayout>