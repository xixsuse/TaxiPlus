<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/orderBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rfi_view">

    <TextView
        android:id="@+id/rfi_question_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:foreground="?attr/selectableItemBackground"
        android:textSize="@dimen/_13ssp"
        android:textColor="?attr/usText"
        android:text="Question #1"
        android:padding="@dimen/_8sdp"/>
    <TextView
        android:id="@+id/rfi_answer_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/rfi_question_text"
        app:layout_constraintBottom_toTopOf="@id/bottom_line"
        android:textSize="@dimen/_13ssp"
        android:textColor="?attr/usText"
        android:layout_marginStart="@dimen/_10ssp"
        android:text="Answer for #1"
        android:fontFamily="sans-serif-light"
        android:paddingStart="@dimen/_6sdp"
        android:paddingEnd="@dimen/_6sdp"
        android:paddingBottom="@dimen/_6sdp"
        android:visibility="gone"/>
    <View
        android:id="@+id/bottom_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray"
        app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>