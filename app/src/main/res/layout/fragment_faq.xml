<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:background="@color/white">

    <android.support.v7.widget.Toolbar
        android:id="@+id/ff_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_42sdp"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:contentInsetRight="0dp"
        app:contentInsetEnd="0dp"
        android:background="?attr/colorPrimary">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:requiresFadingEdge="horizontal"
            android:gravity="center_vertical">
            <ImageButton
                android:id="@+id/ff_back"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:background="@drawable/icon_back" />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginEnd="@dimen/_30sdp"
                android:layout_height="wrap_content"
                android:text="@string/faq_all"
                android:textAlignment="center"
                android:textSize="@dimen/_13ssp"
                android:textColor="@color/white"/>
        </LinearLayout>
    </android.support.v7.widget.Toolbar>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/ff_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingBottom="@dimen/_55sdp"
        app:layout_constraintTop_toBottomOf="@id/ff_toolbar"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
        android:id="@+id/ff_recom_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/rounded_green_view"
        android:layout_margin="@dimen/_15sdp"
        android:textColor="@color/white"
        android:textSize="@dimen/_14ssp"
        android:text="@string/recomendations"
        android:textAllCaps="false"/>
</android.support.constraint.ConstraintLayout>