<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.MainFragment"
        android:clickable="true">

        <com.google.android.gms.maps.MapView
            android:id="@+id/mf_mapview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <ImageView
            android:id="@+id/mf_my_location"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:background="@drawable/icon_my_location"
            android:foreground="?android:attr/selectableItemBackground"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="@dimen/_80sdp"/>

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            app:contentInsetRight="0dp"
            app:contentInsetEnd="0dp">
            <LinearLayout
                android:id="@+id/mf_menu_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginEnd="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:src="@drawable/icon_menu"
                    android:tint="?attr/colorPrimary"/>
            </LinearLayout>
        </android.support.v7.widget.Toolbar>

        <!--create new order-->
        <android.support.constraint.ConstraintLayout
            android:id="@+id/mf_new_order_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:padding="@dimen/_15sdp"
            android:visibility="gone">
            <Button
                android:id="@+id/mf_from_button"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginBottom="@dimen/_8sdp"
                app:layout_constraintBottom_toTopOf="@id/mf_to_button"
                android:background="@drawable/rounded_white_view"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:textColor="?attr/buttonColor"
                android:textAllCaps="false"
                android:textSize="@dimen/_14ssp"
                android:text="@string/from"
                android:maxLines="1"
                android:ellipsize="end"/>
            <Button
                android:id="@+id/mf_to_button"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                app:layout_constraintBottom_toTopOf="@id/mf_make_order"
                android:layout_marginBottom="@dimen/_8sdp"
                android:background="@drawable/rounded_white_view"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:textColor="?attr/buttonColor"
                android:textSize="@dimen/_14ssp"
                android:textAllCaps="false"
                android:text="@string/to"
                android:maxLines="1"
                android:ellipsize="end"/>
            <Button
                android:id="@+id/mf_make_order"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@drawable/rounded_veiw"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:textColor="@color/white"
                android:textSize="@dimen/_14ssp"
                android:textAllCaps="false"
                android:text="@string/make_order" />
        </android.support.constraint.ConstraintLayout>

        <include
            layout="@layout/custom_waiting_view"
            app:layout_constraintTop_toTopOf="parent"/>

        <ProgressBar
            android:id="@+id/mf_progressbar"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginBottom="@dimen/_50sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:indeterminate="true"
            android:visibility="gone"/>
    </android.support.constraint.ConstraintLayout>
    <include layout="@layout/chechout_bottom_sheet"/>
</android.support.design.widget.CoordinatorLayout>