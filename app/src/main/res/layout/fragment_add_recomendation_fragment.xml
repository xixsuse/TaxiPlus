<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:background="@color/white">

    <android.support.v7.widget.Toolbar
        android:id="@+id/far_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_42sdp"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:contentInsetRight="0dp"
        app:contentInsetEnd="0dp"
        android:background="?attr/colorPrimary">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:requiresFadingEdge="horizontal"
            android:gravity="center_vertical">
            <ImageButton
                android:id="@+id/far_back"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:background="@drawable/icon_back" />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginEnd="@dimen/_30sdp"
                android:layout_height="wrap_content"
                android:text="@string/recomendations"
                android:textAlignment="center"
                android:textSize="@dimen/_16ssp"
                android:textColor="@color/white"/>
        </LinearLayout>
    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/far_toolbar"
        app:layout_constraintBottom_toBottomOf="parent">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:id="@+id/top_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/_1sdp"
                android:background="@color/gray"
                app:layout_constraintTop_toTopOf="parent"/>
            <EditText
                android:id="@+id/far_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/top_line"
                android:minHeight="@dimen/_220sdp"
                android:background="@color/white"
                android:textSize="@dimen/_14ssp"
                android:textColor="@color/gray"
                android:hint="@string/write_recomendations"
                android:gravity="top"
                android:padding="@dimen/_7sdp"/>
            <View
                android:id="@+id/bottom_line"
                android:layout_width="match_parent"
                android:layout_height="0.4dp"
                android:background="@color/gray"
                app:layout_constraintTop_toBottomOf="@id/far_edittext"/>
            <TextView
                android:id="@+id/rate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/bottom_line"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_margin="@dimen/_15sdp"
                android:textColor="@color/gray"
                android:textSize="@dimen/_15ssp"
                android:text="@string/rate"/>
            <RatingBar
                android:id="@+id/far_ratingbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:stepSize="1"
                style="@style/MyRatingBar"
                android:scaleX="0.8"
                android:scaleY="0.8"
                app:layout_constraintTop_toBottomOf="@id/rate"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
            <Button
                android:id="@+id/far_send_button"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                app:layout_constraintTop_toBottomOf="@id/far_ratingbar"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@drawable/rounded_green_view"
                android:layout_margin="@dimen/_20sdp"
                android:textColor="@color/white"
                android:textSize="@dimen/_15ssp"
                android:text="@string/send"
                android:textAllCaps="false"/>
        </android.support.constraint.ConstraintLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>