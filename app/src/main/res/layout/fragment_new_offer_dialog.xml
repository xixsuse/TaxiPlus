<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.dialogFragments.NewOfferDialogFragment">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/mf_new_offer_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="@dimen/_15sdp"
        android:visibility="visible">

        <ImageView
            android:id="@+id/nof_name_icon"
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            android:background="@drawable/icon_profile"
            app:layout_constraintTop_toTopOf="@id/name"
            app:layout_constraintBottom_toBottomOf="@id/name"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/offer_name"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/nof_name_icon"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:textSize="@dimen/_13sdp"
            android:textColor="?attr/colorPrimary"/>
        <TextView
            android:id="@+id/nof_name_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAlignment="textEnd"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintStart_toEndOf="@id/name"
            app:layout_constraintTop_toTopOf="@id/name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/name"
            android:text="name"
            android:textSize="@dimen/_13sdp"
            android:textColor="?attr/colorPrimary"/>

        <ImageView
            android:id="@+id/nof_model_icon"
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_12sdp"
            android:background="@drawable/icon_car"
            app:layout_constraintTop_toTopOf="@id/model"
            app:layout_constraintBottom_toBottomOf="@id/model"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/model"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/offer_car_model"
            android:layout_marginTop="@dimen/_17sdp"
            app:layout_constraintTop_toBottomOf="@id/name"
            app:layout_constraintStart_toEndOf="@id/nof_name_icon"
            android:layout_marginStart="@dimen/_12sdp"
            android:textSize="@dimen/_13sdp"
            android:textColor="?attr/colorPrimary"/>
        <TextView
            android:id="@+id/nof_model_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAlignment="textEnd"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintStart_toEndOf="@id/model"
            app:layout_constraintTop_toTopOf="@id/model"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/model"
            android:text="model"
            android:textSize="@dimen/_13sdp"
            android:textColor="?attr/colorPrimary"/>

        <ImageView
            android:id="@+id/nof_number_icon"
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            android:background="@drawable/icon_card"
            app:layout_constraintTop_toTopOf="@id/number"
            app:layout_constraintBottom_toBottomOf="@id/number"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/offer_car_number"
            android:layout_marginTop="@dimen/_17sdp"
            app:layout_constraintTop_toBottomOf="@id/model"
            app:layout_constraintStart_toEndOf="@id/nof_name_icon"
            android:layout_marginStart="@dimen/_12sdp"
            android:textSize="@dimen/_13sdp"
            android:textColor="?attr/colorPrimary"/>
        <TextView
            android:id="@+id/nof_number_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAlignment="textEnd"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintStart_toEndOf="@id/number"
            app:layout_constraintTop_toTopOf="@id/number"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/number"
            android:text="number"
            android:textSize="@dimen/_13sdp"
            android:textColor="?attr/colorPrimary"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_60sdp"
            app:layout_constraintTop_toBottomOf="@id/number">

            <Button
                android:id="@+id/nof_accept_button"
                android:layout_width="0dp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:layout_weight="1"
                android:background="@drawable/rounded_green_view"
                android:text="@string/accept"
                android:textColor="@color/white"
                android:textSize="@dimen/_14ssp"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/nof_decline_button"
                android:layout_width="0dp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_weight="1"
                android:background="@drawable/rounded_carrot_view"
                android:text="@string/decline"
                android:textColor="@color/white"
                android:textSize="@dimen/_14ssp"
                android:textAllCaps="false"/>
        </LinearLayout>
        <ProgressBar
            android:id="@+id/nof_progressbar"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:indeterminate="true"
            android:visibility="gone"/>
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>