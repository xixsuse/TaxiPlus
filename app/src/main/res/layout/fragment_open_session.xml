<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:background="@color/white">
    <android.support.v7.widget.Toolbar
        android:id="@+id/fso_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_42sdp"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:contentInsetRight="0dp"
        app:contentInsetEnd="0dp"
        android:background="?attr/colorPrimary">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:requiresFadingEdge="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/fso_title"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/open_session"
                android:textAlignment="center"
                android:textSize="@dimen/_16ssp"
                android:textColor="@color/white"/>
        </LinearLayout>
    </android.support.v7.widget.Toolbar>


    <android.support.constraint.ConstraintLayout
        android:id="@+id/fos_open_session_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/fso_toolbar">
        <LinearLayout
            android:id="@+id/coins_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            app:layout_constraintTop_toTopOf="parent"
            android:padding="@dimen/_10sdp"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:id="@+id/coins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_15ssp"
                android:textColor="@color/black"
                android:text="@string/coins" />
            <TextView
                android:id="@+id/fos_coins_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:textSize="@dimen/_15ssp"
                android:textColor="?attr/colorPrimary"
                android:textStyle="bold"
                android:text="1000"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/coins_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            app:layout_constraintTop_toBottomOf="@id/coins_amount"
            android:padding="@dimen/_10sdp"
            android:gravity="center"
            android:orientation="horizontal">
            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/_1sdp"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/fos_six_hour_text"
                android:layout_width="wrap_content"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_15ssp"
                android:textColor="?attr/colorPrimary"
                android:text="6 hours"/>
            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/_1sdp"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/fos_unlim_text"
                android:layout_width="wrap_content"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_15ssp"
                android:textColor="?attr/colorPrimary"
                android:text="12 hours"/>
            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/_1sdp"
                android:layout_weight="1"/>
        </LinearLayout>

        <RadioGroup
            android:id="@+id/fos_prices_radio_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/coins_price"
            android:orientation="horizontal"
            android:gravity="center">
            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/_1sdp"
                android:layout_weight="1"/>
            <RadioButton
                android:id="@+id/fos_six_hour_rabiobutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/_1sdp"
                android:layout_weight="1"/>
            <RadioButton
                android:id="@+id/fos_unlim_rabiobutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"/>
            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/_1sdp"
                android:layout_weight="1"/>
        </RadioGroup>

        <LinearLayout
            android:id="@+id/remainder_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            app:layout_constraintTop_toBottomOf="@id/fos_prices_radio_buttons"
            android:padding="@dimen/_10sdp"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:id="@+id/remainder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_15ssp"
                android:textColor="@color/black"
                android:text="@string/remainder" />
            <TextView
                android:id="@+id/fos_remainder_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:textSize="@dimen/_15ssp"
                android:textColor="?attr/colorPrimary"
                android:textStyle="bold"
                android:text="1000"/>
        </LinearLayout>
        <Button
            android:id="@+id/fos_open_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:background="@drawable/rounded_green_view"
            app:layout_constraintTop_toBottomOf="@id/remainder_view"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="@string/open_session_event"
            android:textColor="@color/white"
            android:textSize="@dimen/_15ssp"
            android:textAllCaps="false"/>
    </android.support.constraint.ConstraintLayout>

    <ProgressBar
        android:id="@+id/fos_progressbar"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginBottom="@dimen/_50sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:indeterminate="true"
        android:visibility="gone"/>
</android.support.constraint.ConstraintLayout>