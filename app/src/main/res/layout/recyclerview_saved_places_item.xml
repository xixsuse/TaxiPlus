<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rspi_view">

    <ImageView
        android:id="@+id/rspi_icon"
        android:layout_width="@dimen/_15sdp"
        android:layout_height="@dimen/_20sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="@dimen/_7sdp"
        android:layout_marginStart="@dimen/_9sdp"
        android:layout_marginBottom="@dimen/_7sdp"
        android:background="@drawable/icon_location_marker" />

    <TextView
        android:id="@+id/rspi_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/rspi_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="@dimen/_9sdp"
        android:layout_marginEnd="@dimen/_4sdp"
        android:text="text"
        android:textColor="@color/black"
        android:textSize="@dimen/_15ssp"/>

    <TextView
        android:id="@+id/rspi_nick"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/_9sdp"
        android:layout_marginEnd="@dimen/_4sdp"
        android:textColor="@color/black"
        android:textSize="@dimen/_15ssp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        app:layout_constraintTop_toBottomOf="@id/rspi_icon"
        android:layout_marginTop="@dimen/_7sdp"
        android:background="@color/gray"/>
</android.support.constraint.ConstraintLayout>