<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.user.ChatFragment"
    android:background="@color/white"
    android:clickable="true">

    <android.support.v7.widget.Toolbar
        android:id="@+id/fc_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:contentInsetRight="0dp"
        app:contentInsetEnd="0dp"
        android:background="?attr/colorPrimary">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/_3sdp">
            <TextView
                android:id="@+id/fc_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Абзал"
                android:textAlignment="center"
                android:textSize="@dimen/_13ssp"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/fc_number_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+7 777 777 77 77"
                android:textAlignment="center"
                android:textSize="@dimen/_13ssp"
                android:textColor="@color/white"/>
        </LinearLayout>
    </android.support.v7.widget.Toolbar>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/fс_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/fc_toolbar"
        app:layout_constraintBottom_toTopOf="@id/fc_input_view"/>


    <android.support.constraint.ConstraintLayout
        android:id="@+id/fc_input_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/top_border_with_shadow">

        <EditText
            android:id="@+id/fc_input_edittext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/fc_send_button"
            android:minHeight="@dimen/_30sdp"
            android:background="@color/trans"
            android:hint="@string/type_massage"
            android:textSize="@dimen/_13ssp"/>

        <ImageButton
            android:id="@+id/fc_send_button"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/icon_send"
            android:background="@color/trans"
            android:tint="?attr/colorPrimary"
            android:rotation="-40"/>
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>