<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:background="@color/white"
    tools:context=".ui.makeOrder.MakeOrderFragment">

    <LinearLayout
        android:id="@+id/top_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="@dimen/_8sdp"
        android:background="?attr/colorPrimary"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@color/white">
            <ImageView
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_22sdp"
                android:background="@drawable/icon_point_a"
                app:layout_constraintTop_toTopOf="parent"
                android:scaleType="fitXY"/>
            <TextView
                android:id="@+id/fmo_from_edittext"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_27sdp"
                android:background="@color/trans"
                android:hint="@string/from"
                android:textColorHint="?attr/colorPrimary"
                android:gravity="center"
                android:textColor="?attr/colorPrimary"
                android:textSize="@dimen/_13ssp"
                android:textAllCaps="false"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_7sdp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@color/white">
            <ImageView
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_22sdp"
                android:background="@drawable/icon_point_b"
                app:layout_constraintTop_toTopOf="parent"
                android:scaleType="fitXY"/>
            <TextView
                android:id="@+id/fmo_to_edittext"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_27sdp"
                android:background="@color/trans"
                android:hint="@string/to"
                android:textColorHint="?attr/colorPrimary"
                android:gravity="center"
                android:textColor="?attr/colorPrimary"
                android:textSize="@dimen/_13ssp"
                android:textAllCaps="false"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp" />
        </LinearLayout>
    </LinearLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/top_view"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/fmo_comment_icon"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_7sdp"
            android:layout_marginStart="@dimen/_9sdp"
            android:layout_marginBottom="@dimen/_7sdp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/icon_dialog" />
        <TextView
            android:id="@+id/fmo_comment_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_9sdp"
            android:layout_marginEnd="@dimen/_4sdp"
            app:layout_constraintBottom_toBottomOf="@id/fmo_comment_icon"
            app:layout_constraintStart_toEndOf="@id/fmo_comment_icon"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@string/set_comment"
            android:textColor="@color/black"
            android:textSize="@dimen/_14ssp"/>
        <View
            android:id="@+id/fmo_comment_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="@dimen/_7sdp"
            app:layout_constraintTop_toBottomOf="@id/fmo_comment_text"
            android:background="@color/gray"/>
        <android.support.constraint.ConstraintLayout
            android:id="@+id/fmo_comment_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/fmo_comment_line"
            android:visibility="gone">
            <EditText
                android:id="@+id/fmo_comment_edittext"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                app:layout_constraintTop_toTopOf="parent"
                android:hint="@string/comment_for_driver"
                android:textAlignment="center"/>
            <android.support.constraint.ConstraintLayout
                android:id="@+id/fmo_comment_swipe_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_400sdp"
                app:layout_constraintTop_toBottomOf="@id/fmo_comment_edittext">
                <ImageView
                    android:layout_width="@dimen/_22sdp"
                    android:layout_height="@dimen/_7sdp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:background="@drawable/icon_swipe"/>
            </android.support.constraint.ConstraintLayout>
        </android.support.constraint.ConstraintLayout>

        <ImageView
            android:id="@+id/fmo_date_icon"
            android:layout_width="@dimen/_18sdp"
            android:layout_height="@dimen/_18sdp"
            android:layout_marginTop="@dimen/_7sdp"
            android:layout_marginStart="@dimen/_9sdp"
            android:layout_marginBottom="@dimen/_7sdp"
            app:layout_constraintTop_toBottomOf="@id/fmo_comment_view"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/icon_alarm" />
        <TextView
            android:id="@+id/fmo_date_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_9sdp"
            android:layout_marginEnd="@dimen/_4sdp"
            app:layout_constraintBottom_toBottomOf="@id/fmo_date_icon"
            app:layout_constraintStart_toEndOf="@id/fmo_date_icon"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@string/date"
            android:textColor="@color/black"
            android:textSize="@dimen/_14ssp"/>
        <View
            android:id="@+id/fmo_date_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="@dimen/_7sdp"
            app:layout_constraintTop_toBottomOf="@id/fmo_date_text"
            android:background="@color/gray"/>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/fmo_main_weight_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/fmo_date_line"
            android:visibility="gone">
            <ImageView
                android:id="@+id/fmo_weight_icon"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_7sdp"
                android:layout_marginStart="@dimen/_9sdp"
                android:layout_marginBottom="@dimen/_7sdp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:background="@drawable/icons_weight" />
            <TextView
                android:id="@+id/fmo_weight_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_9sdp"
                android:layout_marginEnd="@dimen/_4sdp"
                app:layout_constraintBottom_toBottomOf="@id/fmo_weight_icon"
                app:layout_constraintStart_toEndOf="@id/fmo_weight_icon"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="@string/weight"
                android:textColor="@color/black"
                android:textSize="@dimen/_14ssp"/>
            <View
                android:id="@+id/fmo_weight_line"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="@dimen/_7sdp"
                app:layout_constraintTop_toBottomOf="@id/fmo_weight_text"
                android:background="@color/gray"/>
            <android.support.constraint.ConstraintLayout
                android:id="@+id/fmo_weight_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/fmo_weight_line"
                android:visibility="gone">
                <EditText
                    android:id="@+id/fmo_weight_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/_20sdp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:hint="@string/set_weight"
                    android:textAlignment="center"
                    android:maxLines="1"
                    android:inputType="number"
                    android:background="@color/trans"/>
                <View
                    android:id="@+id/weight_line"
                    android:layout_width="@dimen/_170sdp"
                    android:layout_height="0.5dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/fmo_weight_edittext"
                    android:background="@color/gray"/>
                <EditText
                    android:id="@+id/fmo_volume_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/_20sdp"
                    app:layout_constraintTop_toBottomOf="@id/weight_line"
                    android:hint="@string/set_volume"
                    android:textAlignment="center"
                    android:maxLines="1"
                    android:inputType="number"
                    android:background="@color/trans"/>

                <ImageView
                    android:layout_width="@dimen/_23sdp"
                    android:layout_height="@dimen/_23sdp"
                    app:layout_constraintStart_toEndOf="@id/weight_line"
                    app:layout_constraintTop_toTopOf="@id/fmo_weight_edittext"
                    app:layout_constraintBottom_toBottomOf="@id/fmo_volume_edittext"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:background="@drawable/icon_bottom_arrow"/>
                <android.support.constraint.ConstraintLayout
                    android:id="@+id/fmo_weight_swipe_view"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_400sdp"
                    app:layout_constraintTop_toBottomOf="@id/fmo_volume_edittext">
                    <ImageView
                        android:layout_width="@dimen/_22sdp"
                        android:layout_height="@dimen/_7sdp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:background="@drawable/icon_swipe"/>
                </android.support.constraint.ConstraintLayout>
            </android.support.constraint.ConstraintLayout>
        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/fmo_main_model_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/fmo_main_weight_view"
            android:visibility="gone">
            <ImageView
                android:id="@+id/fmo_model_icon"
                android:layout_width="@dimen/_19sdp"
                android:layout_height="@dimen/_18sdp"
                android:layout_marginTop="@dimen/_7sdp"
                android:layout_marginStart="@dimen/_9sdp"
                android:layout_marginBottom="@dimen/_7sdp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:background="@drawable/icon_key" />
            <TextView
                android:id="@+id/fmo_model_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_9sdp"
                android:layout_marginEnd="@dimen/_4sdp"
                app:layout_constraintBottom_toBottomOf="@id/fmo_model_icon"
                app:layout_constraintStart_toEndOf="@id/fmo_model_icon"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="@string/model"
                android:textColor="@color/black"
                android:textSize="@dimen/_14ssp"/>
            <View
                android:id="@+id/fmo_model_line"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="@dimen/_7sdp"
                app:layout_constraintTop_toBottomOf="@id/fmo_model_text"
                android:background="@color/gray"/>
            <android.support.constraint.ConstraintLayout
                android:id="@+id/fmo_model_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/fmo_model_line"
                android:visibility="gone">
                <EditText
                    android:id="@+id/fmo_model_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/_20sdp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:hint="@string/car_model"
                    android:textAlignment="center"/>
                <android.support.constraint.ConstraintLayout
                    android:id="@+id/fmo_model_swipe_view"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_400sdp"
                    app:layout_constraintTop_toBottomOf="@id/fmo_model_edittext">
                    <ImageView
                        android:layout_width="@dimen/_22sdp"
                        android:layout_height="@dimen/_7sdp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:background="@drawable/icon_swipe"/>
                </android.support.constraint.ConstraintLayout>
            </android.support.constraint.ConstraintLayout>
        </android.support.constraint.ConstraintLayout>

        <Button
            android:id="@+id/fmo_make_order_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:background="@drawable/rounded_green_view"
            android:textSize="@dimen/_15ssp"
            android:textColor="@color/white"
            android:text="@string/make_order"/>

    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>